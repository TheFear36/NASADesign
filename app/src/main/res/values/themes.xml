<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NASADesign" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:navigationBarColor">@color/dark</item>
        <item name="colorPrimary">@color/dark</item>
        <item name="colorOnPrimary">@color/brown</item>
        <item name="colorPrimaryContainer">@color/orange</item>
        <item name="colorOnPrimaryContainer">@color/wine</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/brown</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark</item>
        <!-- Customize your theme here. -->
        <item name="bottomAppBarStyle">@style/myBottomAppbarStyle</item>
        <item name="floatingActionButtonStyle">@style/myFloatingActionButtonStyle</item>
    </style>

    <style name="myBottomAppbarStyle" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">@color/dark</item>
    </style>

    <style name="myFloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/orange</item>
    </style>
</resources>